<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:src="@mipmap/item_image"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/item_image"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/item_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_product_name"
        android:text="商品描述"
        android:layout_toRightOf="@id/item_image"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_product_description"
        android:text="3元/份"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/item_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/item_image"
        android:layout_alignParentRight="true"
        android:src="@mipmap/add"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_tv_product_count"
        android:layout_toLeftOf="@id/item_add"
        android:layout_alignBottom="@id/item_image"
        android:textSize="25sp"
        android:layout_marginRight="5dp"
        android:text="0"/>
    <ImageView
        android:id="@+id/item_sub"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/item_image"
        android:layout_toLeftOf="@id/item_tv_product_count"
        android:src="@mipmap/sub"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"

        />

</RelativeLayout>
