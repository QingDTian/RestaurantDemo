<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp">
    <ImageView
        android:id="@+id/item_order_img"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/item_order_name"
        android:layout_toRightOf="@id/item_order_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="商品名称"
        android:textSize="30sp"></TextView>
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/item_order_img"
            android:layout_below="@id/item_order_name"
            android:background="#2196F3"
        />
    <TextView
        android:id="@+id/item_order_lab"
        android:layout_toRightOf="@id/item_order_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="66666666666"
        android:layout_below="@id/item_order_name"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/item_order_price"
        android:layout_toRightOf="@id/item_order_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="一共消费:100元"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@id/item_order_img"
        android:layout_marginLeft="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        >
    </View>


</RelativeLayout>
